/* components/list/list.wxss */
.list{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  align-content: flex-start;
}
.list .list-item{
  flex:0 0 100%;
  width: 100%;
  height:80rpx;
  line-height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-start;
  align-content: flex-start;
  position: relative;
  border-bottom:1px solid #eee;
}
.list .image{
  flex:0 0 10%;
  text-align: center;
  position: relative;
}
.list .image image{
  width:40rpx;
  height:40rpx;
  line-height: 40rpx;
  text-align: center;
}
.list .title{
  flex:0 0 80%;
}
.list .arrow-right{
  flex:0 0 10%;
  background: url(https://api.xwfshop.com/images/icons/arrow-right.png) no-repeat center center;
  width:80rpx;
  height:80rpx;
  line-height: 80rpx;
  background-size: 40rpx auto;
}