/**index.wxss**/
.container {
  min-height: 100%;
}
.swiper-container{
  width: 750rpx;
  position: relative;
}
.swiper-box {
  width: 100%;
  height:300rpx;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height:300rpx;
}
.swiper-container .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 20rpx;  
  display: flex;  
  justify-content: center;  
}  
.swiper-container .dots .dot{  
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;  
  background: #fff;  
  border-radius: 50%;  
  transition: all .6s;  
  opacity: .5;
}  
.swiper-container .dots .dot.active{  
  width: 14rpx;  
  opacity: 1;
}

.tag-container{
  width: 100%;
  overflow-x: scroll;
  background: #f2f2f2;
  overflow-y: hidden;
}
.tag-container::-webkit-scrollbar{
	display: none;
}

.fixed-top{
  position: fixed;
  top:0;
  width:100%;
  z-index: 1000;
  background: #f2f2f2;
  overflow-x: scroll;
  overflow-y: hidden;
}
.fixed-top::-webkit-scrollbar{
	display: none;
}
