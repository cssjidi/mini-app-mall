/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.search-box{
  width:100%;
  height:110rpx;
}
.search-bar{
  width:100%;
  position: fixed;
  top:0;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  align-content: space-around;
  border-bottom:1px solid #ccc;
  background: #fff;
}
.search-bar.focus{
  border-bottom:1px solid green;
}
.search-bar.focus icon{
  color:green;
}
input{
  flex:0 0 90%;
  padding-left:20rpx;
}
icon{
  padding-left:10rpx;
}
